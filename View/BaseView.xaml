<UserControl
    x:Class="WpfApp.View.BaseView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Padding="8"
    d:DesignHeight="400"
    d:DesignWidth="800"
    Background="snow"
    mc:Ignorable="d">

    <Grid>
        <!--  Siatka 2x2  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Pierwszy GroupBox w lewym górnym rogu  -->
        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Header="Commands">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Content 1" />
        </GroupBox>


        <GroupBox
            Grid.Row="0"
            Grid.Column="1"
            Padding="10"
            Header="Connection">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Status  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="10"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Status connection:" />
                    <Ellipse
                        Width="16"
                        Height="16"
                        Margin="24,2,0,0"
                        Fill="{Binding ConnectionStatus}"
                        Stroke="Black"
                        StrokeThickness="1" />
                </StackPanel>

                <!--  IP Address  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="IP Address:" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{Binding IpAddress}" />
                </StackPanel>

                <!--  Port  -->
                <StackPanel
                    Grid.Row="2"
                    Margin="10"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Port:" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{Binding Port}" />
                </StackPanel>

                <!--  Connect Button  -->
                <StackPanel
                    Grid.Row="3"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">

                    <Button
                        Width="120"
                        Height="35"
                        Margin="10"
                        HorizontalAlignment="Left"
                        Command="{Binding ConnectionCommand, Mode=OneWay}"
                        Content="Connect" />
                    <Button
                        Grid.Row="3"
                        Width="120"
                        Height="35"
                        Margin="10"
                        HorizontalAlignment="center"
                        Command="{Binding DisconnectionCommand}"
                        Content="Disconnect" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <!--  Trzeci GroupBox w lewym dolnym rogu  -->
        <GroupBox
            Grid.Row="1"
            Grid.Column="0"
            Header="Focus">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Content 3" />
        </GroupBox>

        <!--  Czwarty GroupBox w prawym dolnym rogu  -->
        <GroupBox
            Grid.Row="1"
            Grid.Column="1"
            Header="Logs">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Lista logów  -->
                <ListBox
                    Grid.Row="0"
                    Margin="5"
                    Background="LightGray"
                    BorderThickness="0"
                    FontFamily="Consolas"
                    FontSize="14"
                    Foreground="black"
                    ItemsSource="{Binding Logs}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto" />

                <!--  Przycisk do czyszczenia logów  -->
                <Button
                    Grid.Row="1"
                    Margin="5"
                    Padding="5"
                    Command="{Binding ClearLogsCommand}"
                    Content="Clear" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
