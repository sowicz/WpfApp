<UserControl
    x:Class="WpfApp.View.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfApp.View"
    Width="400"
    Height="200"
    Background="Snow">

    <GroupBox
        Padding="10"
        FontSize="16"
        Header="Settings">
        <StackPanel Margin="10">

            <TextBlock HorizontalAlignment="Center" Text="Enter IP Address and Port:" />

            <!--  Sekcja IP i Port  -->
            <StackPanel
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBox
                    Width="40"
                    MaxLength="3"
                    Text="{Binding IpPart1, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock VerticalAlignment="Center" Text="." />

                <TextBox
                    Width="40"
                    MaxLength="3"
                    Text="{Binding IpPart2, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock VerticalAlignment="Center" Text="." />

                <TextBox
                    Width="40"
                    MaxLength="3"
                    Text="{Binding IpPart3, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock VerticalAlignment="Center" Text="." />

                <TextBox
                    Width="40"
                    MaxLength="3"
                    Text="{Binding IpPart4, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    Text=":" />

                <TextBox
                    Width="60"
                    MaxLength="5"
                    Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!--  Przycisk Save  -->
            <Button
                Width="100"
                Margin="0,20,0,0"
                Command="{Binding SaveCommand}"
                Content="Save" />

        </StackPanel>
    </GroupBox>

</UserControl>
